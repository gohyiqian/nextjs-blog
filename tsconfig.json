{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "esnext",
    // "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true
    //"module": "commonjs", //for next and express to work tgt
    //"compilerOptions.noEmit": true
  },
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "server"],
  "exclude": ["node_modules"]
}
